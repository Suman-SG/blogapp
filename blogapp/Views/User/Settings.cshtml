@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userName = Context.Session.GetString("UserName") ?? "User";
    var userInitial = userName.Substring(0, 1).ToUpper();
    var profileBio = "Welcome to your settings page. You can manage your profile, view activity, and update preferences.";
}
<style>
    :root {
        --primary: #4361ee;
        --primary-light: #3f37c9;
        --secondary: #3a0ca3;
        --accent: #f72585;
        --light: #f8f9fa;
        --dark: #212529;
        --gray: #6c757d;
        --light-gray: #e9ecef;
        --sidebar-width: 260px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Settings Container */
    .settings-container {
        display: flex;
        min-height: 100vh;
        background-color: #f5f7fa;
    }

    /* Fixed Sidebar */
    .settings-sidebar {
        width: var(--sidebar-width);
        background: linear-gradient(135deg, #151A2D 0%, #0D1120 100%);
        color: white;
        position: fixed;
        height: 100vh;
        padding: 20px 0;
        display: flex;
        flex-direction: column;
        box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        z-index: 100;
    }

    .sidebar-header {
        padding: 0 20px 20px;
        text-align: center;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        margin-bottom: 20px;
    }

        .sidebar-header h5 {
            margin-top: 10px;
            font-weight: 500;
        }

    .profile-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0 auto;
    }

        .profile-avatar.large {
            width: 80px;
            height: 80px;
            font-size: 2rem;
        }

    .sidebar-nav {
        flex: 1;
        overflow-y: auto;
        padding: 0 10px;
    }

        .sidebar-nav ul {
            list-style: none;
        }

        .sidebar-nav li {
            margin-bottom: 5px;
        }

        .sidebar-nav a, .logout-btn {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s ease;
            background: transparent;
            border: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
        }

            .sidebar-nav a i, .logout-btn i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

            .sidebar-nav a:hover, .logout-btn:hover {
                background: rgba(255,255,255,0.1);
                color: white;
            }

        .sidebar-nav .active a {
            background: rgba(255,255,255,0.1);
            color: white;
            font-weight: 500;
        }

    .logout-item {
        margin-top: auto;
        padding-top: 20px;
        border-top: 1px solid rgba(255,255,255,0.1);
    }

    .logout-btn {
        color: #ff6b6b;
    }

        .logout-btn:hover {
            color: #ff4757;
        }

    /* Admin Button */
    .admin-btn {
        position: absolute;
        bottom: 20px;
        left: 20px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255,255,255,0.1);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .admin-btn:hover {
            background: var(--accent);
            transform: rotate(90deg);
        }

    /* Main Content */
    .settings-content {
        flex: 1;
        margin-left: var(--sidebar-width);
        padding: 30px;
        max-width: calc(100% - var(--sidebar-width));
    }

    .settings-header {
        margin-bottom: 30px;
    }

        .settings-header h2 {
            font-size: 2rem;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .settings-header p {
            color: var(--gray);
        }

    .settings-card {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .profile-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-info {
        display: flex;
        align-items: center;
    }

        .profile-info > div {
            margin-left: 20px;
        }

        .profile-info h3 {
            margin-bottom: 5px;
        }

    .btn-edit-profile {
        background: var(--primary);
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-edit-profile:hover {
            background: var(--primary-light);
        }

    .divider {
        height: 1px;
        background: var(--light-gray);
        margin: 25px 0;
    }

    .activity-section h4 {
        margin-bottom: 15px;
        color: var(--dark);
    }

    .empty-activity {
        text-align: center;
        padding: 30px;
        color: var(--gray);
    }

        .empty-activity i {
            font-size: 2rem;
            margin-bottom: 10px;
            color: var(--light-gray);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .settings-sidebar

    {
        width: 70px;
        padding: 15px 0;
    }

    .sidebar-header h5,
    .sidebar-nav span {
        display: none;
    }

    .sidebar-nav a, .logout-btn {
        justify-content: center;
        padding: 15px 0;
    }

        .sidebar-nav a i, .logout-btn i {
            margin-right: 0;
            font-size: 1.2rem;
        }

    .settings-content {
        margin-left: 70px;
        max-width: calc(100% - 70px);
        padding: 20px;
    }

    .profile-section {
        flex-direction: column;
        align-items: flex-start;
    }

    .btn-edit-profile {
        margin-top: 15px;
    }

    }

    @@media (max-width: 576px) {
        .profile-info

    {
        flex-direction: column;
        text-align: center;
    }

    .profile-info > div {
        margin-left: 0;
        margin-top: 15px;
    }

    }
</style>

<!-- Main Container -->
<div class="settings-container">
    <!-- Fixed Sidebar -->
    <div class="settings-sidebar">
        <div class="sidebar-header">
            <div class="profile-avatar">
                @userInitial
            </div>
            <h5>@userName</h5>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li class="active">
                    <a href="/User/Profile">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/User/MyPosts">
                        <i class="fas fa-file-alt"></i>
                        <span>My Posts</span>
                    </a>
                </li>
                <li>
                    <a href="/User/Bookmarks">
                        <i class="fas fa-bookmark"></i>
                        <span>Bookmarks</span>
                    </a>
                </li>
                <li>
                    <a href="/User/Dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="logout-item">
                    <form method="post" action="/Auth/Logout">
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Admin Button -->
        <a href="/Admin/Login" class="admin-btn" title="Admin Panel">
            <i class="fas fa-cog"></i>
        </a>
    </div>

    <!-- Scrollable Main Content -->
    <div class="settings-content">
        <div class="settings-header">
            <h2>Account Settings</h2>
            <p>Manage your profile and preferences</p>
        </div>

        <div class="settings-card">
            <div class="profile-section">
                <div class="profile-info">
                    <div class="profile-avatar large">
                        @userInitial
                    </div>
                    <div>
                        <h3>@userName</h3>
                        <p class="text-muted">@profileBio</p>
                    </div>
                </div>
                <button class="btn-edit-profile">
                    <i class="fas fa-pencil-alt"></i> Edit Profile
                </button>
            </div>

            <div class="divider"></div>

            <div class="activity-section">
                <h4>Recent Activity</h4>
                <div class="empty-activity">
                    <i class="fas fa-clock"></i>
                    <p>No recent activity</p>
                </div>
            </div>
        </div>
    </div>
</div>

