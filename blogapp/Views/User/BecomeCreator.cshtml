@{
    ViewData["Title"] = "Request Access";
}

@if (TempData["RequestMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["RequestMessage"]
        <br />
        <a href="/BlogPost/Index" class="btn btn-primary mt-2">Return to Home Page</a>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Become a Blog Creator</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="BecomeCreatorRequest">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" name="email" required placeholder="Enter Email" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" name="password" required placeholder="Enter Password" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Send Request</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="/Home/Index" class="btn btn-primary">🏠 Return to Home</a>
    </div>
}